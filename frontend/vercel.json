{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://thedominators.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/login",
      "destination": "/auth?type=login",
      "permanent": false
    },
    {
      "source": "/register",
      "destination": "/auth?type=register",
      "permanent": false
    },
    {
      "source": "/forgot-password",
      "destination": "/password-recovery",
      "permanent": false
    },

    {
      "source": "/route-calculator",
      "destination": "/calculator",
      "permanent": false
    },
    {
      "source": "/bus-info",
      "destination": "/bus-stops",
      "permanent": false
    },

    {
      "source": "/carpool",
      "destination": "/car-pooling",
      "permanent": false
    },
    {
      "source": "/rides/post",
      "destination": "/post-ride",
      "permanent": false
    },
    {
      "source": "/rides/search",
      "destination": "/search-ride",
      "permanent": false
    },

    {
      "source": "/my-rides",
      "destination": "/ride-history",
      "permanent": false
    },
    {
      "source": "/my-bookings",
      "destination": "/booked-rides",
      "permanent": false
    },
    {
      "source": "/my-requests",
      "destination": "/sent-requests",
      "permanent": false
    },
    {
      "source": "/incoming-requests",
      "destination": "/received-requests",
      "permanent": false
    },

    {
      "source": "/admin",
      "destination": "/admin/dashboard",
      "permanent": false
    },
    {
      "source": "/admin/users",
      "destination": "/admin/parkingusers",
      "permanent": false
    },
    {
      "source": "/admin/bus-stops",
      "destination": "/admin/stops",
      "permanent": false
    },

    {
      "source": "/parking",
      "destination": "/parkings",
      "permanent": false
    },
    {
      "source": "/parking/book",
      "destination": "/parkings/user",
      "permanent": false
    },
    {
      "source": "/parking/manage",
      "destination": "/parkings/owner",
      "permanent": false
    },

    {
      "source": "/future",
      "destination": "/future-transport",
      "permanent": false
    },

    {
      "source": "/messages",
      "destination": "/chats",
      "permanent": false
    },

    {
      "source": "/feedback",
      "destination": "/reports",
      "permanent": false
    },

   
    {
      "source": "/:path*",
      "destination": "/404",
      "statusCode": 404
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}